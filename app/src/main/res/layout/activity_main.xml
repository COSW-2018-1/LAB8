<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/edit_text_label"
        android:fontFamily="casual"
        android:inputType="text"
        android:text="@string/enter_message"
        android:textStyle="bold"
        tools:text="enter text" />


    <Button
        android:id="@+id/BtnLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickLoadPhoto"
        android:text="@string/add_photo" />


    <fragment
        android:id="@+id/fragment"
        android:name="cosw.eci.edu.intents_camera_activities_fragments.NewPostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_new_post" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/image"
        android:contentDescription="@string/image" />


    <Button
        android:id="@+id/saveAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveAll"
        android:text="@string/save" />



</LinearLayout>
